<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.survey.InstagramSurveyFragment">


        <ImageView
            android:id="@+id/iv_instagram"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:src="@drawable/instagram"
            app:layout_constraintBottom_toBottomOf="@id/instagram_title_tv"
            app:layout_constraintEnd_toStartOf="@id/instagram_title_tv"
            app:layout_constraintTop_toTopOf="@id/instagram_title_tv" />

        <TextView
            android:id="@+id/instagram_title_tv"
            style="@style/MyGalleryTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="인스타 연동"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/instagram_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="    인스타그램을 연동하여\n 작품추천 받으시겠습니까?"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instagram_title_tv" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/instagram_btn"
            style="@style/ButtonRoundShort20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:text="연동하겠습니다"
            app:layout_constraintBottom_toTopOf="@+id/instagram_cancel_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instagram_content_tv" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/instagram_cancel_btn"
            style="@style/ButtonRoundShort20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:text="아니요 괜찮아요"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instagram_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>