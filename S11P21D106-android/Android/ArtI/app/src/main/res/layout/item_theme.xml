<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_theme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/inter_28pt_black"
            android:text="테마 : 희망"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_preview_image1"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/temp_preview_image1"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_theme_title" />

        <ImageView
            android:id="@+id/iv_preview_image2"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/temp_preview_image2"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/iv_preview_image3"
            app:layout_constraintStart_toEndOf="@id/iv_preview_image1"
            app:layout_constraintTop_toBottomOf="@id/tv_theme_title" />

        <ImageView
            android:id="@+id/iv_preview_image3"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/temp_preview_image3"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_preview_image2"
            app:layout_constraintTop_toBottomOf="@id/tv_theme_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>